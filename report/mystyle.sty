\ProvidesPackage{mystyle}

% Basics.
  \usepackage[T1]{fontenc}                % Font encoding.
  \usepackage[utf8]{inputenc}             % Input encoding.
  \usepackage[english,italian]{babel}     % Language support.
  \usepackage{csquotes}                   % Recommended for babel + biblatex.
  \usepackage{amsmath}
  \usepackage{float}
  \usepackage{graphicx}                   % Images.

% Additional packages.
  \usepackage[table]{xcolor}
  \usepackage{booktabs}


% Custom sectioning.
  \usepackage{titlesec}

  \titleformat{\section}
    {\scshape\Large}{\thesection}{1em}{}[\titlerule]
  \titleformat{\subsection}
    {\scshape}{\thesubsection}{1em}{}

  \titlespacing*{\section}
    {0em}{1em}{0.0em}
  \titlespacing*{\subsection}
    {0em}{1em}{0.0em}

% Indentation.
  \setlength\parindent{12pt}

% Numbering.
  \numberwithin{equation}{section}
  \numberwithin{figure}{section}
  \numberwithin{table}{section}

% References.
  \usepackage{hyperref}

  \hypersetup{
      colorlinks,
      linkcolor={red!50!black},
      citecolor={red!50!black},
      urlcolor={red!50!black}
  }

  \newcommand{\refpar}[1] {\hyperref[#1]{(\ref{#1})}}
  \newcommand{\reflst}[1] {\hyperref[#1]{Lst. \ref{#1}}}
  \newcommand{\reftab}[1] {\hyperref[#1]{Tab. \ref{#1}}}
  \newcommand{\reffig}[1] {\hyperref[#1]{Fig. \ref{#1}}}
  \newcommand{\refsec}[1] {\hyperref[#1]{Sez. \ref{#1}}}

% Captions.
  \usepackage{caption}
  \captionsetup[figure]{name=Fig.}
  \captionsetup[table]{name=Tab.}
  \usepackage[font=small,labelfont=bf]{caption}
